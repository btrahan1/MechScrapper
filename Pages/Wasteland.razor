@page "/wasteland"
@inject IJSRuntime JSRuntime

<PageTitle>The Wasteland</PageTitle>

<div class="game-container">
    <canvas id="renderCanvas"></canvas>
    
    <div class="hud">
        <h1>THE WASTE</h1>
        <div class="compass-wrapper">
            <div class="compass-strip" id="compassStrip"></div>
            <div class="compass-marker">▼</div>
        </div>
        <p>SPEED: <span id="speedVal">0</span> km/h</p>
        <p>HDG: <span id="hdgVal">0° (N)</span></p>
        <p style="color: red; font-weight: bold;">SIGNAL: <span id="distVal">SEARCHING</span></p>
    </div>
    
    <div class="hud-right">
        <p>SCRAP: <span id="scrapVal" style="color: gold;">0</span></p>
    </div>

    <div class="hud-bottom">
        <div class="speed-slider-container">
            <span class="slider-label">SPEED LIMIT</span>
            <input type="range" min="1" max="100" value="50" class="slider" id="speedSlider" 
                   oninput="window.mechRenderer.setSpeedRatio(this.value)">

            <span class="slider-label" style="margin-top: 10px;">BANDIT SPEED</span>
            <input type="range" min="1" max="100" value="35" class="slider" id="enemySpeedSlider" 
                   oninput="window.mechRenderer.setEnemySpeedRatio(this.value)">
        </div>

        <div class="fuel-bar-container">
            <div class="fuel-bar" id="fuelBar" style="width: 100%;"></div>
            <span class="fuel-label">FUEL</span>
        </div>
    </div>
</div>

<script>
    window.updateHud = (speed, dist, hdgRad, fuel, scrap) => {
        var elSpeed = document.getElementById('speedVal');
        if (!elSpeed) return; // Exit if HUD is gone

        elSpeed.innerText = speed;
        document.getElementById('distVal').innerText = dist + "m";
        
        if (scrap !== undefined) {
             document.getElementById('scrapVal').innerText = scrap;
        }

        if (fuel !== undefined) {
             var elFuel = document.getElementById('fuelBar');
             if (elFuel) {
                 elFuel.style.width = fuel + "%";
                 if (fuel < 20) elFuel.style.backgroundColor = "red";
                 else elFuel.style.backgroundColor = "#ffcc00";
             }
        }

        var deg = hdgRad * (180 / Math.PI);
        var offset = -deg * 2;
        var finalPos = 200 + offset;
        document.getElementById('compassStrip').style.backgroundPositionX = finalPos + "px";
    };
</script>

<style>
    body, html { overflow: hidden; height: 100%; margin: 0; background: #222; }
    .game-container { position: relative; width: 100%; height: 80vh; }
    #renderCanvas { width: 100%; height: 100%; touch-action: none; outline: none; }
    
    .hud {
        position: absolute;
        top: 20px;
        left: 20px;
        color: orange;
        font-family: 'Courier New', monospace;
        text-shadow: 2px 2px 0 #000;
        pointer-events: none;
        width: 100%;
    }

    .compass-wrapper {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 400px;
        height: 40px;
        background: rgba(0,0,0,0.6);
        border: 2px solid #555;
        border-radius: 4px;
        overflow: hidden;
        pointer-events: none;
    }

    .compass-strip {
        width: 100%;
        height: 100%;
        background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='720' height='40' viewBox='0 0 720 40'><text x='0' y='30' fill='white' font-family='monospace' font-weight='bold' text-anchor='middle'>N</text><rect x='90' y='10' width='2' height='10' fill='gray'/><text x='180' y='30' fill='white' font-family='monospace' font-weight='bold' text-anchor='middle'>E</text><rect x='270' y='10' width='2' height='10' fill='gray'/><text x='360' y='30' fill='white' font-family='monospace' font-weight='bold' text-anchor='middle'>S</text><rect x='450' y='10' width='2' height='10' fill='gray'/><text x='540' y='30' fill='white' font-family='monospace' font-weight='bold' text-anchor='middle'>W</text><rect x='630' y='10' width='2' height='10' fill='gray'/><text x='720' y='30' fill='white' font-family='monospace' font-weight='bold' text-anchor='middle'>N</text></svg>");
        background-repeat: repeat-x;
    }

    .compass-marker {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        color: red;
        font-size: 20px;
        line-height: 20px;
    }

    .hud-right {
        position: absolute;
        top: 20px;
        right: 20px;
        color: white;
        font-family: 'Courier New', monospace;
        text-shadow: 2px 2px 0 #000;
        font-size: 24px;
        font-weight: bold;
        pointer-events: none;
    }

    .hud-bottom {
        position: absolute;
        bottom: 20px;
        right: 20px;
        width: 300px;
        pointer-events: auto;
    }

    .speed-slider-container {
        width: 100%;
        margin-bottom: 10px;
        background: rgba(0,0,0,0.6);
        padding: 5px;
        border: 1px solid #555;
        color: white;
        font-family: 'Courier New', monospace;
        text-align: center;
    }

    .slider {
        width: 90%;
        cursor: pointer;
    }

    .slider-label {
        display: block;
        font-size: 14px;
        margin-bottom: 5px;
        color: #ffcc00;
        font-weight: bold;
    }

    .fuel-bar-container {
        width: 100%;
        height: 30px;
        background: #333;
        border: 2px solid #555;
        position: relative;
    }

    .fuel-bar {
        height: 100%;
        background: #ffcc00;
        transition: width 0.2s;
    }

    .fuel-label {
        position: absolute;
        width: 100%;
        text-align: center;
        top: 2px;
        color: black;
        font-weight: bold;
        font-family: sans-serif;
    }
</style>

@implements IAsyncDisposable

@code {
    private DotNetObjectReference<Wasteland>? objRef;
    
    [Inject] MechScrappers.Services.GameState State { get; set; } = default!;
    [Inject] HttpClient Http { get; set; } = default!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            objRef = DotNetObjectReference.Create(this);
            var json = "";
            try {
                 json = await Http.GetStringAsync("data/starter_mech.json");
            } catch (Exception ex) { Console.WriteLine("Internal Load Warning: " + ex.Message); }
            
            await JSRuntime.InvokeVoidAsync("mechRenderer.init", "renderCanvas", objRef, json);
        }
    }

    [JSInvokable]
    public void AddScrap(int amount)
    {
        State.AddScrap(amount);
    }

    public async ValueTask DisposeAsync()
    {
        try {
            await JSRuntime.InvokeVoidAsync("mechRenderer.dispose");
        } catch { /* Page might be closing, ignore JS errors */ }
        
        objRef?.Dispose();
    }
}
